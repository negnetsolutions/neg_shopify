<div class="paragraph_row">
  <div class="grid one left middle">
    <section class="shopify_cart cart cart-page">
      <div class="cart_wrapper">
        <form action="" method="post">
          <h1>{{ 'Your Cart'|t }}</h1>
          <div class="items">
            <div class="header image">{{ 'Product'|t }}</div>
            <div class="header name"></div>
            <div class="header quantity">{{ 'Quantity'|t }}</div>
            <div class="header price">{{ 'Price'|t }}</div>
            <div class="header remove"></div>

            <ul class="item-list">
            </ul>
          </div>
          <div class="subtotal">
            <strong>{{ 'Subtotal'|t }}:</strong>
            <p class="value">{{ 'Loading'|t }}...</p>
            <p class="note">{{ 'Shipping &amp; taxes calculated at checkout'|t }}</p>
          </div>
          <div class="checkout-form">
            <input type="submit" name="checkout" value="{{ 'Check out'|t }}" class="checkout-btn">
          </div>
        </form>
      </div>
    </section>
  </div>
</div>
