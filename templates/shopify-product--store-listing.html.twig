{%
set classes = [
'shopify-product',
view_mode ? view_mode|clean_class,
]
%}
<article{{ attributes.addClass(classes) }}>
  <a href="{{ url }}">
    <figure class="image">
      {{ content.image.0 }}
    </figure>
    <div class="info">
      {{ content.title }}
    </div>
    {% set variant = shopify_product.firstAvailableVariant %}
    {% if variant and variant.compare_at_price.0.value > 0 %}
    <div class="sale">
      <div class="compare_at_price">${{ variant.compare_at_price.0.value|number_format(2, '.', ',') }}</div>
    {% endif %}
    <div class="price">
      {{ content.low_price }}
    </div>
    {% if variant and variant.compare_at_price.0.value > 0 %}
    </div>
    {% endif %}
  </a>
</article>
